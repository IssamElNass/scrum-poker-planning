{
  "name": "scrum-poker-planning-monorepo",
  "version": "1.0.2",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:websocket\" \"npm run dev:ui\"",
    "dev:ui": "npm run dev --workspace=apps/ui",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:websocket": "npm run dev --workspace=apps/websocket",
    "build": "npm run build --workspaces",
    "build:ui": "npm run build --workspace=apps/ui",
    "build:backend": "npm run build --workspace=apps/backend",
    "build:websocket": "npm run build --workspace=apps/websocket",
    "start": "concurrently \"npm run start:backend\" \"npm run start:websocket\" \"npm run start:ui\"",
    "start:ui": "npm run start --workspace=apps/ui",
    "start:backend": "npm run start --workspace=apps/backend",
    "start:websocket": "npm run start --workspace=apps/websocket",
    "lint": "npm run lint --workspaces",
    "db:migrate": "npm run db:migrate --workspace=apps/backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "tsx": "^4.19.2",
    "typescript": "5.9.2"
  },
  "git": {
    "url": "https://github.com/IssamElNass/scrum-poker-planning.git",
    "branch": "main"
  },
  "author": {
    "name": "Issam El Nass"
  },
  "license": "MIT"
}
